<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">




    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/titleName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user1" />


    <TextView
        android:id="@+id/titleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="450dp"
        android:layout_marginTop="12dp"
        android:fontFamily="monospace"
        android:text="PRofile"
        android:textAlignment="center"
        android:textColor="#2c2c2c"
        android:textSize="27sp"
        app:layout_constraintTop_toBottomOf="@+id/user_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

    <TextView
        android:id="@+id/titleHello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="Hello"
        android:textColor="#707070"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/titleName" />







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="240dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:layout_weight="1"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileEmail"
            android:text="email"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textSize="18sp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="280dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_weight="1"
        android:text="Password"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profilePassword"
        android:text="password"
        android:layout_weight="1"
        android:textAlignment="viewEnd"
        android:textSize="18sp"/>
    </LinearLayout>





    <Button
        android:id="@+id/food_pref"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:onClick="foodPref"
        android:text="My food prefrences"
        android:textSize="11dp"
        android:layout_marginTop="150dp"
        android:textColor="@color/darkgray"
        android:gravity="center"
        app:cornerRadius = "10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleHello"
        app:layout_constraintVertical_bias="0.501" />

    <Button
        android:id="@+id/my_recipes"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:onClick="myRecipes"
        android:text="My Recipes"
        android:textSize="11dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        app:cornerRadius = "10dp"
        android:textColor="@color/darkgray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleHello"
        app:layout_constraintVertical_bias="0.501" />

    <Button
        android:id="@+id/my_favourites"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:onClick="favourites"
        android:text="Favourites"
        android:textSize="11dp"
        android:layout_marginTop="250dp"
        android:gravity="center"
        app:cornerRadius = "10dp"
        android:textColor="@color/darkgray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleHello"
        app:layout_constraintVertical_bias="0.501" />

    <Button
        android:id="@+id/find_map"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:onClick="marketsNearMe"
        android:text="Find supermarket near me"
        android:textSize="11dp"
        android:gravity="center"
        android:layout_marginTop="300dp"
        android:textColor="@color/darkgray"
        app:cornerRadius = "10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleHello"
        app:layout_constraintVertical_bias="0.501" />


    <Button
        android:id="@+id/edit_profile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:onClick="editProfile"
        android:text="Edit Profile"
        android:textSize="10dp"
        app:cornerRadius = "10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/darkgray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/find_map"
        app:layout_constraintVertical_bias="0.501" />



</androidx.constraintlayout.widget.ConstraintLayout>