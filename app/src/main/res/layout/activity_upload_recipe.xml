<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Upload_Recipe">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="30dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:id="@+id/iv_foodImage"
        android:src="@drawable/ic_baseline_image_24"
/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:id="@+id/upload_recipe_name"
        />
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="preparation time"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:id="@+id/upload_recipe_preparation"
/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingredients"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:id="@+id/upload_recipe_ingredients"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Instruction"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:id="@+id/upload_recipe_instruction"
        />

    <Button
        android:id="@+id/upload_photo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Select Image"
        android:textSize="20sp"
        android:onClick="btnSelectImage"
        android:textColor="@color/darkgray"
        />
    <Button
        android:id="@+id/upload_recipe"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="upload recipe"
        android:textSize="22sp"
        android:textColor="@color/darkgray"
        android:onClick="btnUploadRecipe"
        />




</LinearLayout>

</ScrollView>