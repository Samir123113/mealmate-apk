<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.myrecipebook.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

    </fragment>

    <fragment
        android:id="@+id/nav_categories"
        android:name="com.example.myrecipebook.ui.categories.CategoryFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_category" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.myrecipebook.ui.slideshow.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/activity_profile" />



    <activity
        android:id="@+id/nav_uploadActivity"
        android:name="com.example.myrecipebook.activities.UploadActivity"
        android:label="activity_upload"
        tools:layout="@layout/activity_upload" />
    <activity
        android:id="@+id/nav_detailActivity"
        android:name="com.example.myrecipebook.activities.DetailActivity"
        android:label="activity_detail"
        tools:layout="@layout/activity_detail" />
    <activity
        android:id="@+id/nav_my_recipes"
        android:name="com.example.myrecipebook.activities.MainnActivity"
        android:label="activity_mainn"
        tools:layout="@layout/activity_mainn" />

    <activity
        android:id="@+id/nav_map"
        android:name="com.example.myrecipebook.activities.MapActivity"
        android:label="activity_map"
        tools:layout="@layout/activity_map"/>
</navigation>